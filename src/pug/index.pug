extends layout.pug

block title
    title OIOI Jewellery

block content
    // Masthead
    header.masthead(style='padding-bottom: 3rem;')
        .container.px-4.px-lg-5
            .row.gx-4.gx-lg-5.align-items-center.justify-content-center.text-center
                .col-lg-8.align-self-end
                    img.mb-4.masthead-logotype(src='assets/img/logos/oioi_logotype_black.svg', alt='OIOI')
                    .d-flex.justify-content-center.align-items-center.mb-3
                        span.decorative-icon.me-2 ðŸœƒâœ´ï¸Ž
                        h1.my-0(style='font-size: 1.4rem;') Gioielli Artigianali
                        span.decorative-icon.ms-2 âœ´ï¸ŽðŸœƒ
                    p Magic shaped from raw matter & artisanal intelligence
                    hr.divider
                .col-lg-8.align-self-baseline
                    p.mb-3
                    // Link to Portfolio section with SVG button
                    a(href='#portfolio')
                        +svg-vai-alle-collezioni('Vai alle collezioni', '140px')

    // Portfolio
    #portfolio
        .container.px-4.px-lg-5
            .row.gx-4.gx-lg-5.justify-content-center
                // Opera Collection
                .col-lg-4.col-md-6.mb-5.text-center
                    a(href='opera.html')
                        img.img-fluid.mb-3(src='assets/img/portfolio/opera/thumbnails/ring1.jpg', alt='Opera Collection', loading='lazy')
                    h3(style='font-size: 1.2rem;') Opera
                
                // Things Collection
                .col-lg-4.col-md-6.mb-5.text-center
                    a(href='things.html')
                        img.img-fluid.mb-3(src='assets/img/portfolio/things/thumbnails/pesce.jpg', alt='T.H.I.N.G.S. Collection', loading='lazy')
                    h3(style='font-size: 1.2rem;') T.H.I.N.G.S.
                
                // They/Them Collection (Coming Soon)
                .col-lg-4.col-md-6.mb-5.text-center
                    .position-relative.mb-3
                        img.img-fluid(src='assets/img/portfolio/things/thumbnails/pesce.jpg', alt='', style='visibility: hidden;')
                        .position-absolute.top-0.start-0.w-100.h-100.d-flex.align-items-center.justify-content-center(style='background-color: #f0f0f0;')
                            p.mb-0(style='font-size: 1.5rem; color: #888;') Coming Soon
                    h3(style='font-size: 1.2rem;') THEY, THEM

        // Contact
        section#contact.page-section(style='padding-bottom: 2rem;')
            .container.px-4.px-lg-5
                .row.gx-4.gx-lg-5.justify-content-center
                    .col-lg-8
                        p.mb-3.text-center(style='font-size: 1.1rem;') Se qualcosa ti ha incuriosito, scrivimi per parlarne
                        p.font-calligraphy.text-center.mb-3(style='font-size: 2rem; line-height: 1.6;') Ti aprirÃ² la porta, e da li potremo cominciare a creare insieme
                    .col-lg-5.col-md-8
                        // Netlify Forms
                        form#contactForm(name='contact', method='POST', data-netlify='true', netlify-honeypot='bot-field', action='/success.html')

                            // Netlify Forms hidden fields
                            input(type='hidden', name='form-name', value='contact')
                            // Honeypot field
                            input(type='text', name='bot-field', class='d-none')

                            // Name input
                            .form-floating.mb-3
                                input#name.form-control(
                                    type='text',
                                    name='name',
                                    placeholder='Enter your name...',
                                    required
                                )
                                label(for='name') Full name
                                .invalid-feedback(data-sb-feedback='name:required')
                                    | A name is required.

                            // Email address input
                            .form-floating.mb-3
                                input#email.form-control(
                                    type='email',
                                    name='email',
                                    placeholder='name@example.com',
                                    required
                                )
                                label(for='email') Email address
                                .invalid-feedback(data-sb-feedback='email:required')
                                    | An email is required.
                                .invalid-feedback(data-sb-feedback='email:email')
                                    | Email is not valid.

                            // Phone number input
                            .form-floating.mb-3
                                input#phone.form-control(
                                    type='tel',
                                    name='phone',
                                    placeholder='(123) 456-7890'
                                )
                                label(for='phone') Phone number

                            // Message input
                            .form-floating.mb-3
                                textarea#message.form-control(
                                    type='text',
                                    name='message',
                                    placeholder='Enter your message here...',
                                    style='height: 10rem;',
                                    required
                                )
                                label(for='message') Message
                                .invalid-feedback(data-sb-feedback='message:required')
                                    | A message is required.

                            // Submit Button
                            .d-grid.mt-4
                                button#submitButton.btn-reset(type='submit')
                                    +svg-entra-in-contatto('Entra in contatto', '140px')
